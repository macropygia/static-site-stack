{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,

    "checkJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  }
}
